@model DMGestionDeTareas.Models.DMTarea
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1 class="my-4">Editar Tarea</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="DMTareaId" />
                        <div class="form-group">
                            <label asp-for="DMTitulo" class="control-label"></label>
                            <input asp-for="DMTitulo" class="form-control" />
                            <span asp-validation-for="DMTitulo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DMDescripcion" class="control-label"></label>
                            <input asp-for="DMDescripcion" class="form-control" />
                            <span asp-validation-for="DMDescripcion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DMFechaVencimiento" class="control-label"></label>
                            <input asp-for="DMFechaVencimiento" class="form-control" />
                            <span asp-validation-for="DMFechaVencimiento" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DMPrioridadId" class="control-label"></label>
                            <select asp-for="DMPrioridadId" class="form-control" asp-items="ViewBag.DMPrioridadId"></select>
                            <span asp-validation-for="DMPrioridadId" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <label asp-for="DMCategoriaId" class="control-label"></label>
                            <select asp-for="DMCategoriaId" class="form-control" asp-items="ViewBag.DMCategoriaId"></select>
                            <span asp-validation-for="DMCategoriaId" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}